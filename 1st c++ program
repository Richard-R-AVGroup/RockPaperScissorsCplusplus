
#include "stdafx.h"
#define _USE_MATH_DEFINES 
#include <cmath>
#include <iostream>
#include <fstream>
#include <string>
#include <iomanip>




using namespace std;

int main()
{	
	///File Input and Output
	ifstream inFile;
	ofstream outFile;
	///Geometry
	double rwidth = 0;
	double rheight = 0;
	double cradius = 0;
	///People and Savings
	string firstName = "noname";
	string lastName = "noname";
	int count = 0 ;
	int age = 0;
	double savings = 0;
	///Aggregated Sums
	//Rectangle
	double sumwidth = 0;
	double sumheight = 0;
	double rarea = 0;
	double perimeter = 0;
	//Circle
	double carea = 0;
	double circumference = 0;
	double sumradius = 0;
	//Persons
	double sumsavings = 0;
	int sumage = 0;


	inFile.open("inData.txt");
	outFile.open("outData.txt");

	outFile << fixed << showpoint;
	outFile << setprecision(2);

	cout << "Processing Data . . ." << endl;


	///Var gathering Loop
	while (!inFile.eof()) {
		cout << "-----------------------------------------------------------------------" << endl;
		//Rectangles
		inFile >> rwidth >> rheight;
		cout << "Rectangle: " << endl;
		cout << "Rectangle width: " << rwidth << "  "
			<< "Rectangle Height: " << rheight << "  "
			<< "Rectangle area: " << rwidth * rheight << endl;
		cout << "Rectangle Perimeter: " << rwidth * 2 + rheight * 2 << endl;
		cout << (rarea = rarea + rwidth*rheight) <<endl;
		cout << (perimeter = perimeter + (rwidth * 2 + rheight * 2)) << endl;
		cout << (sumwidth = sumwidth + rwidth) << endl;
		cout << (sumheight = sumheight + rheight) << endl;
		cout << endl;

		//Circles
		inFile >> cradius;
		cout << "Circles:" << endl;
		cout << "Circle Radius: " << cradius << "  "
			<< "Circle Area: " << M_PI * pow(cradius, 2) << endl;
		cout << "Circumference of a circle: " << 2 * (M_PI * cradius) << endl;
		cout << (carea = carea + M_PI * pow(cradius, 2)) << endl;
		cout << (circumference = circumference + 2 * (M_PI * cradius)) << endl;
		cout << (sumradius = sumradius + cradius) << endl;
		cout << endl;

		//People
		inFile >> firstName >> lastName, count++;
		inFile >> age >> savings;
		cout << "Persons: " << endl;
		cout << "Number of people: " << count << endl;
		cout << "Age: " << age << endl;
		cout << "Savings: " << savings << endl;
		cout << (sumage = sumage + age) << endl;
		cout << (sumsavings = sumsavings + savings) << endl;

		cout << "-----------------------------------------------------------------------" << endl;

		inFile.clear();
		inFile.ignore(25, '/n');
	}

	outFile << "Assignment 1" << endl;
	outFile << endl;

	outFile << left << setw(29) << "Total Rectangle:" << endl;
	outFile << left << setfill('.') << setw(29) <<"Total Rectangle Area: " << " " << rarea << endl;
	outFile << left << setw(29) << "Total Rectangle Perimeter: " << " " <<  perimeter << endl;
	outFile << left << setw(29) << "Total Rectangle width: " << " " << sumwidth << endl;
	outFile << left << setw(29) << "Total Rectangle height: " << " " << sumheight << endl;
	outFile << endl;

	outFile << left << setfill(' ') << setw(29) << "Total Circle:" << endl;
	outFile << left << setfill('.') << setw(29) << "Total Radius: " << " " << sumradius << endl;
	outFile << left << setw(29) << "Total Circumference: " << " " << circumference << endl;
	outFile << left << setw(29) << "Total Area: " << " " << carea << endl;
	outFile << endl;

	outFile << left << setfill(' ') << setw(29) << "Total Persons: " << endl;
	outFile << left << setfill('.') << setw(29) << "Total people: " << " " << count << endl;
	outFile << left << setw(29) << "Total age: " << " " << sumage << endl;
	outFile << left << setw(29) << "Total Savings: " << " " << sumsavings << endl;

	cout << endl << endl;


	inFile.close();
	outFile.close();

	system("pause");

	return 0;
}
